generator client {
  provider        = "prisma-client-js"
  output          = "../../../../node_modules/.prisma/client"
  previewFeatures = ["prismaSchemaFolder"]
}

generator dbml {
  provider              = "prisma-dbml-generator"
  output                = "../dbml"
  outputName            = "schema.dbml"
  projectName           = "contribute-api"
  includeRelationFields = true
}

datasource db {
  provider     = "postgresql"
  url          = env("DB_URL")
  relationMode = "prisma"
}
